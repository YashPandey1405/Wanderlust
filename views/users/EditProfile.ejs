<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h2 class="col-6 offset-3 mt-3">SignUp On Wanderlust</h2>
  <div class="col-6 offset-3">
    <form
      method="post"
      action="/Profile/<%= currentUser._id %>/edit"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="row">
        <div class="mt-3 mb-3 col-md-4">
          <label for="user[username]" class="form-label">username :</label>
          <input
            type="text"
            id="username"
            class="form-control"
            name="user[username]"
            value="<%=currentUser.username %>"
            required
          />
          <div class="valid-feedback">Username Looks Good!</div>
          <div class="invalid-feedback">Please Enter A Username</div>
        </div>
        <div class="mt-2 mb-3 col-md-8">
          <label for="user[email]" class="form-label">Email :</label>
          <input
            type="text"
            id="email"
            class="form-control"
            name="user[email]"
            value="<%=currentUser.email%>"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="user[about]" class="form-label"
          >Tell Us About Yourself :</label
        >
        <input
          type="text"
          id="title"
          class="form-control"
          name="user[about]"
          value="<%=currentUser.about %>"
          required
        />
        <div class="valid-feedback">Title Looks Good!</div>
        <div class="invalid-feedback">Please Enter A Title</div>
      </div>
      <div class="mb-3">
        Original Listing Image <br />
        <img
          src="<%= originalImageUrl %>"
          alt="not found"
          style="width: 400px; height: 300px; filter: blur(2px)"
        />
      </div>
      <div class="mb-3">
        <label for="user[image]" class="form-label"
          >Upload Listing Image :
        </label>
        <input type="file" id="image" class="form-control" name="user[image]" />
      </div>
      <button type="submit" class="btn btn-primary mt-3 mb-3">Submit</button>
    </form>
  </div>
</div>
